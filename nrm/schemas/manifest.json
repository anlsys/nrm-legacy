{
  "type": "object",
  "required": [
    "name",
    "version",
    "app"
  ],
  "properties": {
    "version": {
      "const": "0.0.1"
    },
    "name": {
      "type": "string"
    },
    "app": {
      "type": "object",
      "required": [
        "container"
      ],
      "properties": {
        "container": {
          "type": "object",
          "required": [
            "cpus",
            "mems"
          ],
          "properties": {
            "cpus": {
              "type": "number"
            },
            "mems": {
              "type": "number"
            }
          }
        },
        "scheduler": {
          "oneOf": [
            {
              "type": "object",
              "required": [
                "policy",
                "priority"
              ],
              "properties": {
                "policy": {
                  "const": "SCHED_OTHER"
                },
                "priority": {
                  "type": "number"
                }
              }
            },
            {
              "type": "object",
              "required": [
                "policy",
                "priority"
              ],
              "properties": {
                "policy": {
                  "type": "string",
                  "enum": [
                    "SCHED_FIFO",
                    "SCHED_HPC"
                  ]
                }
              }
            }
          ]
        },
        "perfwrapper": {
          "const": true
        },
        "power": {
          "type": "object",
          "required": [
            "profile",
            "policy",
            "damper",
            "slowdown"
          ],
          "properties": {
            "policy": {
              "type": "string",
              "enum": [
                "NONE",
                "DDCM",
                "DVFS",
                "COMBINED"
              ]
            },
            "profile": {
              "type": "boolean"
            },
            "damper": {
              "type": "number",
              "minimum": 0
            },
            "slowdown": {
              "type": "number",
              "maximum": 1,
              "exclusiveMaximum": true
            }
          }
        },
        "monitoring": {
          "type": "object",
          "required": [
            "ratelimit"
          ],
          "properties": {
            "ratelimit": {
              "type": "number",
              "minimum": 0
            }
          }
        }
      }
    },
    "hwbind": {
      "const": "enabled"
    },
    "image": {
      "type": "object",
      "required": [
        "path",
        "type"
      ],
      "properties": {
        "path": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "sif",
            "docker"
          ]
        },
        "binds": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  }
}
